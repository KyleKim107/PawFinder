<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:paddingLeft="26dp"
    android:paddingTop="5dp"
    android:paddingRight="26dp"
    android:paddingBottom="5dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/recyclerLayout"
    tools:context=".Profile.ProfileActivity">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/remove_background">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_x" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/recyclerImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginVertical="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pets"
            app:riv_corner_radius="7dp" />

        <TextView
            android:id="@+id/recyclerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="12dp"
            android:text="Pet's Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/recyclerAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerName"
            android:layout_marginStart="120dp"
            android:layout_marginTop="4dp"
            android:text="Pet's Age"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recyclerGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerAge"
            android:layout_marginStart="120dp"
            android:text="Pet's Gender"
            android:textColor="@color/grey"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>